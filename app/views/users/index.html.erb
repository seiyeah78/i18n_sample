<h1><%= t('.list') %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:name) %></th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to t(".show"), user %></td>
        <td><%= link_to t(".edit"), edit_user_path(user) %></td>
        <td><%= link_to t(".destroy"), user, method: :delete, data: { confirm: t('.del_confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_user'), new_user_path %>
